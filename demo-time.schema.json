{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://elio.dev/demo-time.schema.json",
  "title": "Demo Time - Schema",
  "description": "The schema for the Demo Time - VSCode extension",
  "lastModified": "2024-12-06",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "demos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icons": {
            "type": "object",
            "properties": {
              "start": {
                "type": "string"
              },
              "end": {
                "type": "string"
              }
            },
            "required": [
              "start",
              "end"
            ],
            "description": "Provide the icon name of the VS Code codicon for the start and end of the demo"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": ["create", "open", "markdownPreview", "insert", "highlight", "unselect", "replace", "delete", "waitForTimeout", "waitForInput", "executeVSCodeCommand", "showInfoMessage", "executeTerminalCommand", "snippet"],
                  "title": "Action to perform"
                },
                "path": {
                  "type": "string",
                  "title": "Path to file"
                },
                "content": {
                  "type": "string",
                  "title": "Content to insert"
                },
                "contentPath": {
                  "type": "string",
                  "title": "Path to content to insert"
                },
                "position": {
                  "type": ["string", "number"],
                  "title": "Position in the file. Can be line number or \"<start line>:<end line>\"."
                },
                "timeout": {
                  "type": "number",
                  "title": "Timeout in milliseconds"
                },
                "command": {
                  "type": "string",
                  "title": "VSCode or Terminal command to execute"
                },
                "message": {
                  "type": "string",
                  "title": "The message for the notification"
                },
                "lineInsertionDelay": {
                  "type": "number",
                  "title": "Speed in milliseconds to insert each line. If not defined, the \"demoTime.lineInsertionDelay\" setting will be used. To turn off the line insertion effect, set it to 0."
                },
                "args": {
                  "type": ["object", "array", "string", "number", "boolean"],
                  "title": "Arguments to pass to the command for VSCode or placeholder names for your snippet"
                }
              },
              "required": [
                "action"
              ],
              "allOf": [{
                "if": {
                  "properties": {
                    "action": {
                      "enum": ["create", "open", "markdownPreview"]
                    }
                  }
                },
                "then": {
                  "required": [
                    "path"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "enum": ["executeVSCodeCommand", "executeTerminalCommand"]
                    }
                  }
                },
                "then": {
                  "required": [
                    "command"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "enum": ["insert", "replace"]
                    }
                  }
                },
                "then": {
                  "required": [
                    "path",
                    "position"
                  ],
                  "oneOf": [{
                    "required": [
                      "content"
                    ]
                  }, {
                    "required": [
                      "contentPath"
                    ]
                  }]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "const": "snippet"
                    }
                  }
                },
                "then": {
                  "required": [
                    "contentPath"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "const": "delete"
                    }
                  }
                },
                "then": {
                  "required": [
                    "path",
                    "position"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "const": "highlight"
                    }
                  }
                },
                "then": {
                  "required": [
                    "path",
                    "position"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "const": "unselect"
                    }
                  }
                },
                "then": {
                  "required": [
                    "path"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "const": "delete"
                    }
                  }
                },
                "then": {
                  "required": [
                    "path",
                    "position"
                  ]
                }
              }, {
                "if": {
                  "properties": {
                    "action": {
                      "const": "showInfoMessage"
                    }
                  }
                },
                "then": {
                  "required": [
                    "message"
                  ]
                }
              }],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "title",
          "steps"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "title",
    "description",
    "demos"
  ]
}